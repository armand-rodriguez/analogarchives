<% if @cart.status > 1 %>
  <h1 class="title">Order Reciept</h1>
<% end %>
<% if @cart.status == 1 %>
  <%= link_to 'Keep Shopping', products_path, class:"button is-dark" %>
<% end %>
</hr>
<section class="section">
  <%= render @cart.line_items %>
  <div class="columns">
    <div class="column">
      <% if @cart.status == 1 %>
        <%= button_to 'Empty Cart', @cart, method: :delete, data: {confirm: "Are you sure?"}, class: 'button is-danger'%>
      <% end %>
    </div>
    <div class="column has-text-right">
      <p class="title is-4">
        <span class="has-text-grey">Total: </span> <%= number_to_currency(@cart.total_price/100.to_f) %>
      </p>

    </div>
  </div>
  <% if @cart.status == 1 %>
    <%= link_to 'Checkout',new_order_path, class: 'button is-dark' %>
  <% end %>



</section>
