<section class="section">
  <h1 class="title">Releases</h1>
  <div class="columns">
    <% @products.each do |product| %>
    <div class="column">
      <h2 class="title">
        <%= product.artist %>
      </h2>
      <p class="subtitle">
        <%= product.album %>
      </p>
      <%= link_to product do %>
      <figure class="image is-4by3">
        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
      </figure>
      <% end %>
      <% if product.price %>
      <strong><%= number_to_currency(product.price/100.to_f) %></strong>
      <% end %>
    </div>
    <% end %>
  </div>
</section>
<% if signed_in? && current_user.admin? %>
<section class="section">
<%= link_to 'New Product', new_product_path, class: "button is-info" %>
</section>
<% end %>
