<section class="section">
  <h1 class="title">Releases</h1>
  <div class="columns is-multiline">
    <% @products.each do |product| %>
    <div class="column is-one-third">

      <%= link_to product do %>
      <figure class="image is-4by3">
        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
      </figure>
      <% end %>
      <h2 class="is-size-4">
        <strong><%= product.artist %></strong>
      </h2>
      <p>
        <%= product.album %>
      </p>
      <%# if @cart.status == 1 %>
        <%#= button_to "#{number_to_currency(product.price/100.to_f)} | Add to Cart", line_items_path(product_id: @product), class: 'button is-dark ' %>
      <%# end %>
    </div>
    <% end %>
  </div>
</section>
<% if signed_in? && current_user.admin? %>
<section class="section">
<%= link_to 'New Product', new_product_path, class: "button is-info" %>
</section>
<% end %>
