
  <h1 class="title">
    <%= @article.title %>
  </h1>
<figure class="image is-square">
    <%= image_tag(@article.image) %>
</figure>



  <p class="subtitle">
    <%= @article.description %>
  </p>
  <p>
    <%= @article.body %>
  </p>

<% if signed_in? && current_user.admin? %>
<p>
  <%= link_to 'Edit', edit_article_path(@article), class: "button is-dark" %><br>
</p>
<% end %>
<%= link_to 'Back', articles_path, class: "button is-black" %>
