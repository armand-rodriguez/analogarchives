
<div class="columns is-centered">
  <div class="column has-text-centered">

    <div class="card">
      <div class="card-image">
        <figure class="image ">
            <%= image_tag(@featured_article.image) %>
        </figure>
      </div>
      <div class="card-content">
        <h1 class="subtitle"><strong><%= link_to @featured_article.title, @featured_article %></strong></h1>
        <p><%= @featured_article.description %></p>
      </div>
    </div>

  </div>
</div>
<h1 class="title has-text-centered">Articles</h1>
<div class="columns is-multiline">



  <% @articles.each do |article| %>
    <div class="column is-one-third">
      <div class="card">
        <%= link_to article do %>
        <div class="card-image">
          <figure class="image is-square">
              <%= image_tag(article.image) %>
          </figure>
        </div>
        <div class="card-content">
          <h2 class="title is-6"><strong><%= article.title %></strong></h2>
          <p><%= article.description %></p>
          <p><%= truncate(article.body) %></p>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>

</div>



<% if signed_in? && current_user.admin? %>
  <%= link_to 'Create an Article', new_article_path, class: 'button is-info' %>
<% end %>
