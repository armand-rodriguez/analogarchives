<div class="columns is-centered">
  <div class="column is-5">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :first_name, class: 'control'  %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name", class: 'control input' %>
      </div>

      <div class="field">
        <%= f.label :last_name, class: 'control' %><br />
        <%= f.text_field :last_name, autocomplete: "last-name", class: 'control input'  %>
      </div>

      <div class="field">
        <%= f.label :email, class: 'control' %><br />
        <%= f.email_field :email, autocomplete: "email", class: 'control input'  %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'control' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'control input'  %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'control' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'control input'  %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'button is-dark' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
