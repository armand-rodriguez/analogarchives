
<div class="columns is-centered">
  <div class="column is-5">
    <h1 class="title">Sign In</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'control' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'control input' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'control' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'control input' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Sign In", class: 'button is-primary' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
